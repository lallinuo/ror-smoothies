<!DOCTYPE html>
<html>
<head>
  <title>Rorsmoothies</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="nav">
  <%= link_to "Smoothies", smoothies_path %>
  <%= link_to "Users", users_path %>
  <%= link_to "Ingredients", ingredients_path %>

  <% if current_user.nil? %>
      <%= link_to "Log in", signin_path %>
      <%= link_to "Register", new_user_path %>
      <%else%>
      <%= link_to "Log out", signout_path, :method => :delete %>



<%end%>


</div>
<div id="container">
  <div id="content">
<%= yield %>
    </div>
</div>

</body>
</html>
