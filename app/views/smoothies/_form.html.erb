<p id="notice"><%= notice %></p>
<%= form_for(@smoothie) do |f| %>
  <% if @smoothie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@smoothie.errors.count, "error") %> prohibited this smoothie from being saved:</h2>

      <ul>
      <% @smoothie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%=f.label :name%><br/>
    <%=f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :desc, "Recipe" %><br />
    <%= f.text_area :desc %>
  </div>
    <div class="field">
      <%= f.label :ingredients, "Ingredients" %><i> (missing an ingredient? <%= link_to "add new ingredient", new_ingredient_path %>)</i><br />
      <ul>
      <% @ingredients.each do |ingredient| %>

            <li><%=ingredient.name%></td><td><%= check_box_tag 'ingredients[]', ingredient.id, @smoothie.ingredients.include?(ingredient) -%></li>

      <%end%>
       </ul>
    </div>

  <div class="field">
    <%= link_to "Imgurlink", "http://imgur.com" %><br />
    <%= f.text_field :url %>
  </div>
    <%=f.hidden_field :user_id, :value => current_user.id %>

    <div class="field">
    <%= f.label :rating %><br />
    <%= f.number_field :rating %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
